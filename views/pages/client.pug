extends layout
block content
    
    form(method='POST',action='/client')
        .row
            h4 Add New Client 
            
        .col.s6
            .row
                .input-field.col.s12
                    label Name:
                    input.form-control(name='name',type='text')

            .row
                .input-field.col.s12
                    label Password:
                    input.form-control(name='password',type='text')
            
           
            .row
                .input-field.col.s12
                    
                    button.btn(type="submit") Submit
            
        .col.s6
        
            table.table.table-hover.table-dark(id="example")
                thead
                    td Name
                    td Password
                   
                    td Edit
                    td Delete
                   
                   
     
                each foot, i in clients
                    tbody
                        td= foot.name
                        td= foot.password
                       
                        
                        
                        td
                            a.btn.btn-dark(title="Edit",onclick="M.toast({html: 'Edit Data'})",data-toggle="tooltip", data-placement="bottom",href='/client/edit/'+foot._id)
                                i.fa.fa-pencil 
                        td
                            form(action='/client/delete/'+foot._id+'?_method=DELETE',method='POST')
                                button.btn.btn-dark(type='submit' title="Remove",onclick="M.toast({html: 'Data Removing'})",data-toggle="tooltip", data-placement="right")
                                   i.fa.fa-trash
                            
                                    
                                
                          
                
          
        br
        br
        br
        br
      
                    
      
                    
        
				
		
			
				
			
   
