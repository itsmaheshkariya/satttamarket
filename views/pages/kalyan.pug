extends layout
block content
    
    form(method='POST',action='/kalyan')
        .row
            h4 Kalyan Update  
            
        .col.s6
            .row
                .input-field.col.s12
                    label Time 1:
                    input.form-control(name='time1',type='text')

            .row
                .input-field.col.s12
                    label Result 1:
                    input.form-control(name='result1',type='text')
            .row
                .input-field.col.s12
                    label Time 2:
                    input.form-control(name='time2',type='text')
            .row
                .input-field.col.s12
                    label Result 2:
                    input.form-control(name='result2',type='text')
           
            .row
                .input-field.col.s12
                    
                    button.btn(type="submit") Submit
            
        .col.s6
        
            table.table.table-hover.table-dark(id="example")
                thead
                    td Time
                    td Result
                    td Time
                   td Result
                    td Edit
                    td Delete
                   
     
                each tym, i in kalyan
                    tbody
                        td= tym.time1
                        td= tym.result1
                        td= tym.time2
                        td= tym.result2
                       
                        td
                            a.btn.btn-dark(title="Edit",onclick="M.toast({html: 'Edit Data'})",data-toggle="tooltip", data-placement="bottom",href='/kalyan/edit/'+tym._id)
                                i.fa.fa-pencil 
                        td
                            form(action='/kalyan/delete/'+tym._id+'?_method=DELETE',method='POST')
                                button.btn.btn-dark(type='submit' title="Remove",onclick="M.toast({html: 'Data Removing'})",data-toggle="tooltip", data-placement="right")
                                   i.fa.fa-trash
                            
                                    
                                
                          
                
          
        br
        br
        br
        br
      
                    
      
                    
        
				
		
			
				
			
   
