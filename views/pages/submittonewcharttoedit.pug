extends layout
block content
    
    form(method='POST',action='/patti/chart/editonce/'+chart._id)
        .row
            h3 Add To Chart 
        .col.s12
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") Name:
                    input.form-control(name='name',type='text',value=chart.name)

            
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") :
                    input.myinput(name='l1',type='text' ,style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='l2',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='l3',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='m1',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='m2',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='r1',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='r2',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    input.myinput(name='r3',type='text',style="width:40px; height:40px;border-radius:10px;margin-left:30px; border:1px solid grey; float:left;")
                    
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") Color
                    input.form-control(name='color',type='text')
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") Time 1
                    input.form-control(name='time',type='time',value=chart.time)
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") Time 2
                    input.form-control(name='time1',type='time',value=chart.time1)
            .row
                .input-field.col.s12
                    label(style="margin-left:120px") Date
                    input.form-control(name='date',type='date',value=chart.date)
            .row
                .input-field.col.s12
                    
                    button.btn(type="submit",onclick="M.toast({html: 'Data Updated'})") Submit
        
            
          
          
      
                    
      
                    
        
				
		
			
				
			
   
